{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["pages", "lib", "types"]
}
